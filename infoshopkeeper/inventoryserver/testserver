#s.socket_port = 8040
#s.subscribe()
#print s

root=HelloWorld()
root.hello=HelloWorld()
cherrypy.tree.mount(root, '/')

import cherrypy as cherrypy2
cherrypy2.server.socket_port=8040
cherrypy2.server.socket_host='192.168.1.11'

root2=HelloWorld()
cherrypy2.tree.mount(root2, '/')
